@using HTML_Helpers.Models

@model Datos

@{
    ViewBag.Title = "Formulario";
}

<h2>Formulario</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-inline">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">
        <div class="form-group">
            @Html.LabelFor(model => model.Cedula, htmlAttributes: new { @class = "control-label col-md-4", @style = "margin-top:5px;" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.Cedula, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Cedula, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Telefono, htmlAttributes: new { @class = "control-label col-md-4", @style = "margin-top:5px;" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.Telefono, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="form-group">
            @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-4", @style = "margin-top:5px;" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Correo, htmlAttributes: new { @class = "control-label col-md-4", @style = "margin-top:5px;" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.Correo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Correo, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="form-group">
            @Html.LabelFor(model => model.Apellido, htmlAttributes: new { @class = "control-label col-md-4", @style = "margin-top:5px;" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.Apellido, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Apellido, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Genero, htmlAttributes: new { @class = "control-label col-md-4", @style = "margin-top:5px;" })
            <div class="col-md-8">
                @Html.EnumDropDownListFor(
                    x => x.Genero,
                    new { @class = "form-control", @style = "margin-left:20px; width:150%;" })

            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="form-group">
            @Html.LabelFor(model => model.Edad, htmlAttributes: new { @class = "control-label col-md-4", @style = "margin-top:5px;" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.Edad, new { htmlAttributes = new { @class = "form-control", @style = "margin-left:5px;" } })
                @Html.ValidationMessageFor(model => model.Edad, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group" style="margin-left:295px; margin-top:-65px;">
            @Html.LabelFor(model => model.Estado, htmlAttributes: new { @class = "control-label col-md-1", @style = "margin-top:5px;margin-left:20px;" })
            <div class="container" style="margin-top:5px;" >
                Casado
                @Html.RadioButtonFor(m => m.Estado, "Casado", htmlAttributes: new {@class="radio" })
                Soltero
                @Html.RadioButtonFor(m => m.Estado, "Soltero", htmlAttributes: new { @class = "radio" })
                Viudo
                @Html.RadioButtonFor(m => m.Estado, "Viudo", htmlAttributes: new { @class = "radio" })
                Union Libre
                @Html.RadioButtonFor(m => m.Estado, "Union Libre", htmlAttributes: new { @class = "radio" })
            </div>
        </div>
    </div>

    <div class="h3">Gustos Personales:</div>
    
    <div class="row">

        <div class="form-group ">
            @Html.Label("Basketball", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.CheckBoxFor(m => m.Hobby1)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Peliculas", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.CheckBoxFor(m => m.Hobby2)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Baseball", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.CheckBoxFor(m => m.Hobby3)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Programar", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.CheckBoxFor(m => m.Hobby4)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Enviar" class="btn btn-primary btn-md" />
            </div>
        </div>
    </div>
    
</div>
}

